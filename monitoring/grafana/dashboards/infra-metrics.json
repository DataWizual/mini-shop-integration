{
  "title": "Infrastructure Metrics",
  "tags": ["infrastructure", "containers"],
  "timezone": "browser",
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "CPU Usage by Container",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total[1m])",
          "legendFormat": "{{container_name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Memory Usage",
      "targets": [
        {
          "expr": "container_memory_usage_bytes",
          "legendFormat": "{{container_name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "min": 0
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
    }
  ],
  "schemaVersion": 36,
  "version": 1
}
